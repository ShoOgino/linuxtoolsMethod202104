	@Override
	public void run(){
		STDataViewersHideShowColumnsDialog dialog =
			new STDataViewersHideShowColumnsDialog(stViewer);
		
		if (dialog.open() == Window.OK && dialog.isDirty()) {
			if (dialog.getManager() != null) {
				stViewer.setHideShowManager(dialog.getManager());
			}
		}
	}

