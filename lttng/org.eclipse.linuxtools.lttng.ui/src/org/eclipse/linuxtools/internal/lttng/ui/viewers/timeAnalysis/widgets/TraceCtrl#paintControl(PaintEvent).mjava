	@Override
	public void paintControl(PaintEvent e) {
		if (e.widget != this)
			return;
		_fontHeight = e.gc.getFontMetrics().getHeight();
		Rectangle bound = getClientArea();
		if (!bound.isEmpty()) {
			Color colBackup = e.gc.getBackground();
			paint(bound, e);
			e.gc.setBackground(colBackup);
		}
	}

