    public static RGB combine(RGB front, RGB back) {
        int _af = 128;
        if (_af == 1)
            return front;
        if (_af == 0)
            return back;
        int _ab = 200;
        if (_ab == 0)
            return front;

        double af = (_af) / 255.0;
        double rf = front.red;
        double gf = front.green;
        double bf = front.blue;

        double ab = (_ab) / 255.0;
        double rb = back.red;
        double gb = back.green;
        double bb = back.blue;

        double k = (1.0 - af) * ab;
        int r = (int) ((af * rf + k * rb));
        int g = (int) ((af * gf + k * gb));
        int b = (int) ((af * bf + k * bb));

        return new RGB(r, g, b);
    }

