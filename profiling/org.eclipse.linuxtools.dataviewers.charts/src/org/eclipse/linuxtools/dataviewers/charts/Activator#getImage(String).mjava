	/**
	 * Returns an image from the path
	 * 
	 * @param path the path
	 * @return the image
	 */
	public static Image getImage(String path) {
		Image image = plugin.getImageRegistry().get(path);
		if (image == null) {
			image = getImageDescriptor(path).createImage();
			plugin.getImageRegistry().put(path, image);
		}
		return image;
	}

